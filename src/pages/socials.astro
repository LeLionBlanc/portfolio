---
import Layout from '../layouts/BlogPost.astro';
import SocialLink from '../components/SocialLink.astro';
import { SOCIAL_LINKS } from '../consts';

// Social platform data with descriptions
const socialPlatforms = [
  {
    platform: 'Twitch',
    url: SOCIAL_LINKS.twitch,
    username: 'drakelelionblanc',
    description: 'Watch live speedrun attempts, practice sessions, and community games. Interactive chat and real-time engagement.',
  },
  {
    platform: 'Speedrun.com',
    url: SOCIAL_LINKS.speedruncom,
    username: 'DrakeLeLionBlanc',
    description: 'Complete speedrun profile with all personal bests, rankings, and verified runs across multiple games.',
  },
  {
    platform: 'YouTube',
    url: SOCIAL_LINKS.youtube,
    username: 'drakelelionblanc',
    description: 'Speedrun highlights, tutorials, and longer-form content. Perfect for watching runs at your own pace.',
  },
  {
    platform: 'GitHub',
    url: SOCIAL_LINKS.github,
    username: 'drakelelionblanc',
    description: 'Speedrun tools, automation scripts, and other development projects related to gaming and streaming.',
  },
  {
    platform: 'TikTok',
    url: SOCIAL_LINKS.tiktok,
    username: 'drakelelionblanc',
    description: 'Quick speedrun highlights, gaming tips, and behind-the-scenes content in bite-sized videos.',
  },
  {
    platform: 'Discord',
    url: SOCIAL_LINKS.discord,
    description: 'Join the community server for discussions, speedrun tips, and connecting with other gamers.',
  }
];
---

<Layout
  title="Socials - DrakeLeLionBlanc"
  description="Connect with DrakeLeLionBlanc across all social media platforms"
  pubDate={new Date()}
>
  <main class="max-w-4xl mx-auto px-4 py-8">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Connect With Me</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Follow my speedrunning journey across different platforms. Each platform offers unique content and ways to engage with the community.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {socialPlatforms.map((social) => (
        <SocialLink
          platform={social.platform}
          url={social.url}
          username={social.username}
          description={social.description}
        />
      ))}
    </div>

    <div class="mt-12 text-center bg-gray-50 rounded-lg p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Stay Connected</h2>
      <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
        Each platform offers unique content and ways to engage. Follow on multiple platforms to never miss updates, 
        live streams, or new personal bests!
      </p>
      <div class="flex justify-center">
        <a 
          href="/welcome" 
          class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-semibold"
        >
          Back to Welcome
        </a>
      </div>
    </div>
  </main>
</Layout>