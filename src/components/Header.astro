---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, NAV_ITEMS, SOCIAL_LINKS } from '../consts';
---

<header class="bg-white shadow-md">
	<nav class="flex items-center justify-between px-4 py-2 max-w-7xl mx-auto">
		<h2 class="text-xl font-bold">
			<a href="/" class="text-gray-900 hover:text-blue-600 transition-colors no-underline">
				{SITE_TITLE}
			</a>
		</h2>
		
		<div class="hidden md:flex items-center space-x-6">
			{NAV_ITEMS.map(item => (
				<HeaderLink href={item.href}>{item.name}</HeaderLink>
			))}
		</div>
		
		<div class="flex items-center space-x-3">
			<a href={SOCIAL_LINKS.twitch} target="_blank" class="text-gray-600 hover:text-purple-600 transition-colors">
				<span class="sr-only">Follow on Twitch</span>
				<svg viewBox="0 0 24 24" class="w-6 h-6" fill="currentColor">
					<path d="M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6 0L1.714 4.286v15.428h5.143V24l4.286-4.286h3.428L22.286 12V0zm14.571 11.143l-3.428 3.428h-3.429l-3 3v-3H6.857V1.714h13.714Z"/>
				</svg>
			</a>
			
			<a href={SOCIAL_LINKS.github} target="_blank" class="text-gray-600 hover:text-gray-900 transition-colors">
				<span class="sr-only">Go to GitHub profile</span>
				<svg viewBox="0 0 16 16" class="w-6 h-6" fill="currentColor">
					<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
				</svg>
			</a>
			
			<a href={SOCIAL_LINKS.youtube} target="_blank" class="text-gray-600 hover:text-red-600 transition-colors">
				<span class="sr-only">Follow on YouTube</span>
				<svg viewBox="0 0 24 24" class="w-6 h-6" fill="currentColor">
					<path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
				</svg>
			</a>
		</div>
		
		<!-- Mobile menu button -->
		<button class="md:hidden p-2 text-gray-600 hover:text-gray-900" id="mobile-menu-button">
			<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
			</svg>
		</button>
	</nav>
	
	<!-- Mobile menu -->
	<div class="md:hidden hidden bg-white border-t" id="mobile-menu">
		<div class="px-4 py-2 space-y-2">
			{NAV_ITEMS.map(item => (
				<a href={item.href} class="block py-2 text-gray-700 hover:text-blue-600 transition-colors">
					{item.name}
				</a>
			))}
		</div>
	</div>
</header>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const button = document.getElementById('mobile-menu-button');
		const menu = document.getElementById('mobile-menu');
		
		button?.addEventListener('click', () => {
			menu?.classList.toggle('hidden');
		});
	});
</script>
